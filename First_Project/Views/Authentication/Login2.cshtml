<div class="row">
    <div class="col-12">
        <h2 class="contact-title">Login</h2>
    </div>
    <div class="col-lg-8">
        <form class="form-contact contact_form" asp-action="Login2" method="post" id="register-form" >
            <div class="row">
                
                <div class="col-sm-8">
                    <div class="form-group">
                        <input class="form-control" asp-for="Email" name="Email" id="Email" type="text" placeholder="Enter your Email">
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="form-group">
                        <input class="form-control" asp-for="Password" name="Password" id="Password" type="password" placeholder="Enter your Password">
                    </div>
                </div>
                
            </div>
            <p style="color:red">@ViewBag.Error</p>
            <div class="form-group mt-3">
                <button type="submit" class="button button-contactForm">LogIn</button>
            </div>
            <p>
                Don't have an account?<a href="/Authentication/Register2"> Register here</a>
            </p>
        </form>


    </div>

    <div class="col-lg-4">
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-home"></i></span>
            <div class="media-body">
                <h3>Jordan - Amman</h3>
                
            </div>
        </div>
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
            <div class="media-body">
                <h3><a href="tel:0781514032">0781514032</a></h3>
                
            </div>
        </div>
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-email"></i></span>
            <div class="media-body">
                <h3><a href="mailto:moamnrhahleh97@gmail.com">moamnrhahleh97@gmail.com</a></h3>
                <p>Send us your query anytime!</p>
            </div>
        </div>
    </div>
</div>
